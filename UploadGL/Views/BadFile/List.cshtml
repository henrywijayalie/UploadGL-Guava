@*Listing the files *@
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>FileName</th>
            <th>FileSize</th>
            <th>Create DateTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (UploadGL.Models.FileModel file in Model.fileModelList)
        {
            <tr>
                <td>
                    <a class="pl-1" href="@Url.Action("DownloadReportFileLink","BadFile", new { name = file.FileName })" download><span>@file.FileName</span></a>
                </td>
                <td>
                    @file.FileSizeText
                </td>
                <td>
                    @file.FileAccessed
                </td>
            </tr>
        }
    </tbody>
</table>

