<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Upload GL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/notify.min.js"></script>
    <style>
        .navbar-dark .navbar-nav .nav-link {
            color: #FFFFFF;
        }
        .navbar-dark .navbar-brand {
            color: #FFFFFF;
        }
        .navbar-dark .navbar-toggler {
            color: #FFFFFF;
            border-color: #FFFFFF;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #FDAF27; ">
        <div class="container-fluid">
            @Html.ActionLink("UploadGL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler navbar-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("User", "List", "User", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Setting Koneksi", "List", "Setting", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Parameter", "List", "Parameter", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sign Out", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

            </div>
            @*<div class="navbar-brand navbar-right">
            @{
                UploadGL.Helper.JobProcessUpload.GetUserName();
            }
        </div>*@
        </div>
    </nav>
    <div class="container body-content  pt-3">
        @RenderBody()
        <br />
        <br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Upload Data GL Guava - Version @MainProcess.GetVersion() - PT. WARNA BINTANG KREASI</p>
        </footer>
    </div>
    <script>
        $(function () {
            var currentPage = window.location.pathname;
            if (currentPage.toLowerCase().indexOf("home") > 0) { // Prevent error "Cannot read properties of undefined" on other than the home page
                var bufferWidget = $('#buffer');

                setInterval(function () {
                    $.get(bufferWidget.data('url'), function (data) {
                        bufferWidget.html(data);
                        bufferWidget.scrollTop(bufferWidget[0].scrollHeight);
                    });
                }, 1000);
            }
        });
    </script>
</body>
</html>
